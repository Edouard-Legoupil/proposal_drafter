{
    "template_type": "Proposal",
    "donors": [
        "Private Sector (Proactive Outreach)"
    ],
    "special_requirements": {
        "instructions": [
            "Show UNHCR's unique capacity and access",
            "Strictly base all content on the provided inputs and knowledge base.",
            "Do not invent or hallucinate facts, figures, or dates.",
            "If information is missing, explicitly state that it is not available in the context.",
            "Ensure tone, style, and formatting match a professional humanitarian proposal.",
            "when referencing donor, use donor name and never  donor_id",
            "when referencing outcomes, use outcome name and never  outcome_id",
            "when referencing, field context, use field_context name and never field context_id"
        ]
    },
    "section_sequence": [
        "Project Information",
        "Country Background",
        "Sectoral Background",
        "Needs Description Related to Activities",
        "Beneficiaries",
        "Activities Planned",
        "KPIs (including targets)",
        "Expected Impact on Beneficiaries",
        "In-Kind Needs",
        "Consequences of Underfunding",
        "Country/area map",
        "Why UNHCR is Best Placed",
        "Past Implementation/Successes",
        "Monitoring and Evaluation",
        "Sustainability and/or Exit Strategy",
        "Environmental Impact Improvement or Prevention",
        "Risk Assessment",
        "Human Interest Stories",
        "Innovation",
        "Budget Breakdown (RBM structure)",
        "Price Points",
        "Reporting Plans",
        "Reporting Release Date",
        "Bespoke Capacity",
        "Bespoke Information Ready Date"
    ],
