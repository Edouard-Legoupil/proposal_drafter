{
    "template_type": "Proposal",
    "donors": [
        "Private Sector (Proactive Outreach)"
    ],
    "project_info": {
        "fields": [
            {
                "name": "region",
                "label": "Region",
                "type": "text",
                "required": true
            },
            {
                "name": "country",
                "label": "Country",
                "type": "text",
                "required": true
            },
            {
                "name": "location",
                "label": "Location (within country)",
                "type": "text",
                "required": false
            },
            {
                "name": "implementation_period",
                "label": "Implementation Period",
                "type": "text",
                "required": true,
                "help": "If planned: include specific dates. If conditional on funding: expected duration incl. start-up. If multi-year or continuous: indicate and add timeline."
            },
            {
                "name": "suggested_title",
                "label": "Suggested Title",
                "type": "text",
                "required": false
            },
            {
                "name": "outcome_areas",
                "label": "Outcome Area(s)",
                "type": "text",
                "required": true,
                "help": "List all outcome areas under which these activities are budgeted."
            },
            {
                "name": "tags",
                "label": "Tags",
                "type": "text",
                "required": false,
                "help": "e.g., climate, youth, sports"
            }
        ]
    },
    "sections": [
        {
            "section_name": "country_background",
            "section_label": "Country Background",
            "format_type": "text",
            "mandatory": true,
            "word_limit": 250,
            "instructions": "Provide a general background of the country (and relevant regional elements). Keep generic and easy to update."
        },
        {
            "section_name": "sectoral_background",
            "section_label": "Sectoral Background",
            "format_type": "text",
            "mandatory": true,
            "word_limit": 250,
            "instructions": "Provide relevant background related to the sectors of the activities presented."
        },
        {
            "section_name": "needs_description",
            "section_label": "Needs description related to activities",
            "format_type": "text",
            "mandatory": true,
            "word_limit": 300,
            "instructions": "Describe the needs identified by UNHCR that the proposed activities aim to address."
        },
        {
            "section_name": "activities_planned",
            "section_label": "Activities Planned",
            "format_type": "text",
            "mandatory": true,
            "word_limit": 450,
            "instructions": "Describe the activities seeking funding, in plain language for non-expert readers. Link each activity to the needs described."
        },
        {
            "section_name": "kpis",
            "section_label": "KPIs (including targets)",
            "format_type": "table",
            "mandatory": true,
            "instructions": "List KPIs and targets for the activities. Prioritise RBM indicators; reformulate for clarity if needed.",
            "columns": [
                {
                    "name": "Indicator",
                    "format_type": "text",
                    "instructions": "KPI name (prioritise RBM indicators)."
                },
                {
                    "name": "Target",
                    "format_type": "text",
                    "instructions": "Expected target value and timeline."
                },
                {
                    "name": "Data Source / Means of Verification",
                    "format_type": "text",
                    "instructions": "e.g., partner reports, monitoring datasets."
                }
            ],
            "rows": [
                {
                    "row_title": "KPI 1",
                    "instructions": "Add first priority KPI."
                },
                {
                    "row_title": "KPI 2",
                    "instructions": "Add second priority KPI."
                }
            ]
        },
        {
            "section_name": "beneficiaries",
            "section_label": "Number of beneficiaries and description",
            "format_type": "text",
            "mandatory": true,
            "word_limit": 250,
            "instructions": "Provide total targeted beneficiaries with AGD breakdown if possible. Describe populations (refugees, IDPs, returnees, stateless, host communities, authorities) and any AGD emphasis."
        },
        {
            "section_name": "expected_impact",
            "section_label": "Expected impact on beneficiaries",
            "format_type": "text",
            "mandatory": true,
            "word_limit": 250,
            "instructions": "Describe expected changes in beneficiaries' lives beyond immediate participation."
        },
        {
            "section_name": "in_kind_needs",
            "section_label": "In-kind or non-financial needs",
            "format_type": "text",
            "mandatory": false,
            "word_limit": 200,
            "instructions": "List in-kind or non-financial needs that complement activities and increase impact."
        },
        {
            "section_name": "consequences_underfunding",
            "section_label": "Consequences of underfunding",
            "format_type": "text",
            "mandatory": false,
            "word_limit": 250,
            "instructions": "Explain the situation if activities do not take place and potential impacts using data when possible."
        },
        {
            "section_name": "country_area_map",
            "section_label": "Country/area map",
            "format_type": "text",
            "mandatory": false,
            "instructions": "Add a link or reference to a map image or annex."
        },
        {
            "section_name": "why_unhcr",
            "section_label": "Why UNHCR is best placed",
            "format_type": "text",
            "mandatory": false,
            "word_limit": 200,
            "instructions": "Describe UNHCR's comparative advantage and why it is best placed to respond."
        },
        {
            "section_name": "past_successes",
            "section_label": "Past implementation/successes",
            "format_type": "text",
            "mandatory": false,
            "word_limit": 250,
            "instructions": "Summarize previous results and impact from similar activities or same activities in prior years."
        },
        {
            "section_name": "monitoring_evaluation",
            "section_label": "Monitoring and Evaluation",
            "format_type": "text",
            "mandatory": false,
            "word_limit": 250,
            "instructions": "Provide M&E framework for the operation and/or elements specific to these activities."
        },
        {
            "section_name": "sustainability_exit",
            "section_label": "Sustainability and/or Exit Strategy",
            "format_type": "text",
            "mandatory": false,
            "word_limit": 200,
            "instructions": "Explain sustainability plans or exit strategy where relevant."
        },
        {
            "section_name": "environmental_impact",
            "section_label": "Environmental impact improvement or prevention",
            "format_type": "text",
            "mandatory": false,
            "word_limit": 200,
            "instructions": "Explain how activities improve or mitigate environmental impact."
        },
        {
            "section_name": "risk_assessment",
            "section_label": "Risk assessment",
            "format_type": "text",
            "mandatory": false,
            "word_limit": 250,
            "instructions": "Provide risk management framework and/or risks specific to these activities."
        },
        {
            "section_name": "pictures_needs",
            "section_label": "Pictures showing needs",
            "format_type": "text",
            "mandatory": true,
            "instructions": "Provide links or embed images with credits demonstrating needs."
        },
        {
            "section_name": "pictures_past",
            "section_label": "Pictures of past implementation",
            "format_type": "text",
            "mandatory": false,
            "instructions": "Provide links or images with credits from past implementation of the described activities."
        },
        {
            "section_name": "human_interest_stories",
            "section_label": "Available human-interest stories",
            "format_type": "text",
            "mandatory": false,
            "instructions": "Provide links or summaries of available stories with credits."
        },
        {
            "section_name": "innovation",
            "section_label": "Innovation",
            "format_type": "text",
            "mandatory": false,
            "word_limit": 200,
            "instructions": "Describe innovative elements in approach or activities."
        },
        {
            "section_name": "budget_breakdown",
            "section_label": "Budget breakdown (RBM structure)",
            "format_type": "table",
            "mandatory": true,
            "instructions": "Provide budget by Impact and Outcome. Specify outcome name and OL/AOL amounts for each.",
            "columns": [
                {
                    "name": "Level",
                    "format_type": "text",
                    "instructions": "Impact or Outcome"
                },
                {
                    "name": "Name",
                    "format_type": "text",
                    "instructions": "Impact/Outcome name"
                },
                {
                    "name": "Budget (USD)",
                    "format_type": "number",
                    "instructions": "Budget amount"
                }
            ],
            "rows": [
                {
                    "row_title": "Impact 1",
                    "instructions": "Provide totals at Impact level (if applicable)."
                },
                {
                    "row_title": "Outcome 1",
                    "instructions": "Outcome name with budget amounts."
                },
                {
                    "row_title": "Outcome 2",
                    "instructions": "Outcome name with budget amounts."
                }
            ]
        },
        {
            "section_name": "price_points",
            "section_label": "Price points",
            "format_type": "table",
            "mandatory": false,
            "instructions": "Extract donor-friendly price points from activities and budget for inclusion in the global list.",
            "columns": [
                {
                    "name": "Price Point",
                    "format_type": "text",
                    "instructions": "Short donor-facing description (e.g., 'Provide 1 hygiene kit')."
                },
                {
                    "name": "Unit Cost (USD)",
                    "format_type": "number",
                    "instructions": "Cost per unit."
                },
                {
                    "name": "Rationale/Notes",
                    "format_type": "text",
                    "instructions": "Brief rationale or calculation."
                }
            ],
            "rows": [
                {
                    "row_title": "Item 1",
                    "instructions": "Enter first price point."
                },
                {
                    "row_title": "Item 2",
                    "instructions": "Enter second price point."
                }
            ]
        },
        {
            "section_name": "reporting_plans",
            "section_label": "Reporting on these activities already planned (Y/N)",
            "format_type": "text",
            "mandatory": true,
            "instructions": "Indicate if reporting is already planned (Y/N) and reference public resources if applicable."
        },
        {
            "section_name": "reporting_release_date",
            "section_label": "If Yes, expected date of release",
            "format_type": "text",
            "mandatory": true,
            "instructions": "Provide the expected publication date if reporting is planned."
        },
        {
            "section_name": "bespoke_capacity",
            "section_label": "Capacity to produce bespoke report (Y/N)",
            "format_type": "text",
            "mandatory": true,
            "instructions": "Indicate capacity to produce bespoke reporting (Y/N)."
        },
        {
            "section_name": "bespoke_info_ready_date",
            "section_label": "If yes, date when relevant information can be available",
            "format_type": "text",
            "mandatory": true,
            "instructions": "State when indicators, narrative, partner reports, visibility materials, etc., can be available."
        }
    ]
}